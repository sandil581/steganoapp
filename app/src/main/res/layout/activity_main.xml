<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/bold"
        android:text="STAGNOAPP"
        android:textColor="@color/black"
        android:textSize="38sp" />

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-1dp">

        <Button
            android:id="@+id/encode_button"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="595dp"
            android:background="@drawable/button"
            android:fontFamily="@font/pro"
            android:text="Encode Text"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/decode_button"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_below="@+id/encode_button"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-48dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button"
            android:fontFamily="@font/pro"
            android:text="Decode Text"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/encode_1"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="440dp"
            android:background="@drawable/button"
            android:fontFamily="@font/pro"
            android:onClick="encodeImage"
            android:text="Encode Image"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/decode_1"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_below="@+id/encode_1"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="256dp"
            android:layout_marginTop="-49dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button"
            android:fontFamily="@font/pro"
            android:onClick="decodeImage"
            android:text="Decode Image"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="383dp"
            android:layout_height="171dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="167dp"
            android:layout_marginEnd="14dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/rest" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="89dp"
            android:text="image steganography" />

    </RelativeLayout>
</RelativeLayout>